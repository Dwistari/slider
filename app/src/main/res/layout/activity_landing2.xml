<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgsapi">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="sans-serif-medium"
        android:text="LANGKAH MUDAH BERINVESTASI"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/cow"
        android:layout_width="41dp"
        android:layout_height="32dp"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView2"
        android:src="@drawable/cow"
        android:layout_alignLeft="@+id/textView2" />

    <ImageView
        android:id="@+id/invest"
        android:layout_width="41dp"
        android:layout_height="32dp"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/imageView2"
        android:src="@drawable/invest"
        android:layout_alignRight="@+id/imageView2" />

    <ImageView
        android:id="@+id/pay"
        android:layout_width="41dp"
        android:layout_height="32dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="144dp"
        android:src="@drawable/pay"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="144dp" />

    <ImageView
        android:id="@+id/result"
        android:layout_width="41dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/result"
        android:layout_alignRight="@+id/textView2" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btninvest"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Pilih Instrumen
 Investasi"
        android:textColor="#fafafa"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Lakukan
Pembayaran"
        android:textColor="#fafafa"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:fontFamily="sans-serif"
        android:text="Modal Sampai
ke Peternak"
        android:textColor="#fafafa"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:fontFamily="sans-serif"
        android:text="Tunggu
Hasilnya"
        android:textColor="#fafafa"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/slide"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/ellipse"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="168dp" />

    <ImageButton
        android:id="@+id/slide2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/ellipse"
        android:layout_marginLeft="180dp" />



    <Button
        android:id="@+id/btninvest"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/button1"
        android:ems="10"
        android:fontFamily="@font/akzidenz_grotesk_bold"
        android:text="Lihat Investasi"
        android:textColor="#0770c8"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnmasuk"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/btninvest"
        android:layout_marginTop="24dp"
        android:background="@drawable/button2"
        android:ems="10"
        android:fontFamily="@font/akzidenz_grotesk_bold"
        android:text="Masuk"
        android:textColor="@android:color/white"
        android:textStyle="normal" />

</RelativeLayout>