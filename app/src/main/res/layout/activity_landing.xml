<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgsapi">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:fontFamily="sans-serif-medium"
        android:text="SEMUA ORANG BISA BETERNAK"
        android:textColor="#fafafa"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:text="Kelola keuangan anda dengan
instrumen investasi yang terjangkau
dan rendah resiko"
        android:textColor="#fafafa"
        android:textSize="12sp"
        android:textStyle="normal"
        android:id="@+id/textView3" />

    <ImageButton
        android:id="@+id/slide"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/ellipse"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="168dp" />
    <ImageButton
        android:id="@+id/slide2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/ellipse"
        android:layout_marginLeft="180dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#0770c8"
        android:id="@+id/textView4" />

    <Button
        android:id="@+id/btninvest"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_centerVertical="true"
        android:background="@drawable/button1"
        android:ems="10"
        android:fontFamily="@font/akzidenz_grotesk_bold"
        android:text="Lihat Investasi"
        android:textColor="#0770c8"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btnmasuk"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/btninvest"
        android:layout_marginTop="24dp"
        android:background="@drawable/button2"
        android:ems="10"
        android:fontFamily="@font/akzidenz_grotesk_bold"
        android:text="Masuk"
        android:textColor="@android:color/white"
        android:textStyle="normal" />

</RelativeLayout>